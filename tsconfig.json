{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
